<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<welcome-file-list>
		<welcome-file>index.jsf</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>


	<security-constraint>
		<display-name>Restricted</display-name>
		<web-resource-collection>
			<web-resource-name>Restricted Area</web-resource-name>
			<url-pattern>/param/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Groupe User</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>Restricted</display-name>
		<web-resource-collection>
			<web-resource-name>Restricted Area</web-resource-name>
			<url-pattern>/param/operator.jsf</url-pattern>
			<url-pattern>/param/params.jsf</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Groupe User</role-name>
			<role-name>Groupe Fedd</role-name>
		</auth-constraint>
	</security-constraint>


	<!-- Restriction sur les pages admin -->
	<security-constraint>
		<display-name>Restricted</display-name>
		<web-resource-collection>
			<web-resource-name>Restricted Area</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Groupe Admin</role-name>
		</auth-constraint>
	</security-constraint>

	<!-- Restriction de la page d'accueil -->
	<security-constraint>
		<display-name>Restricted</display-name>
		<web-resource-collection>
			<web-resource-name>Restricted Area</web-resource-name>
			<url-pattern>/index.jsf</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Groupe User</role-name>
			<role-name>Groupe Fedd</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.jsf</form-login-page>
			<form-error-page>/login.jsf?error=1</form-error-page>
		</form-login-config>
	</login-config>

	<!-- Pages de redirection en cas d'erreur -->
	<error-page>
		<error-code>403</error-code>
		<location>/error403.jsf</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/error404.jsf</location>
	</error-page>
</web-app>